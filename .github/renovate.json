{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "dependencyDashboardTitle": ":robot: Renovate Dashboard",
  "regexManagers": [
    {
      "fileMatch": [
        "ansible/.+\\.ya?ml$",
        "docker/.+\\.ya?ml$",
        "kubernetes/.+\\.ya?ml$",
        "packer/.+\\.hcl$",
        "terraform/.+\\.tf$"
      ]
    }
  ]
}
