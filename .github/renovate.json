{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>mafyuh/renovate",
    "github>mafyuh/iac//.renovate/labels.json5",
    "github>mafyuh/iac//.renovate/semantic.json5",
    "github>mafyuh/iac//.renovate/versioning.json5",
    "github>mafyuh/iac//.renovate/changelogs.json5"
  ],
  "ignorePaths": [
    "kubernetes/cluster/production/flux-system/gotk-components.yaml"
  ],
  "flux": {
    "fileMatch": ["^kubernetes/.+\\.ya?ml$"]
  },
  "helm-values": {
    "fileMatch": ["^kubernetes/.+\\.ya?ml$"]
  },
  "kubernetes": {
    "fileMatch": ["^kubernetes/.+\\.ya?ml$"]
  },
  "regexManagers": [
    {
      "description": "Update Talos and Kubernetes versions in talconfig.yaml",
      "fileMatch": ["^kubernetes/talos/talconfig\\.ya?ml$"],
      "matchStrings": [
        "# renovate: depName=(?<depName>.*?) datasource=(?<datasource>.*?)\\s+talosVersion: (?<currentValue>.*)",
        "# renovate: depName=(?<depName>.*?) datasource=(?<datasource>.*?)\\s+kubernetesVersion: (?<currentValue>.*)"
      ]
    },
    {
      "description": "Update Flux version in Terraform flux_bootstrap_git resource",
      "fileMatch": ["^terraform/.+\\.tf$"],
      "matchStrings": [
        "resource \"flux_bootstrap_git\" \"flux\" \\{[\\s\\S]*?version\\s*=\\s*\"(?<currentValue>[^\"]+)\""
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "fluxcd/flux2"
    }
  ]
}
