{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  packageRules: [
    {
      "matchPackageNames": ["ollama/ollama"],
      "customChangelogUrl": "https://github.com/ollama/ollama/releases"
    },
    {
      "matchPackageNames": ["grafana/loki"],
      "customChangelogUrl": "https://github.com/grafana/loki/releases"
    },
    {
      "matchPackageNames": ["ghcr.io/linuxserver/kasm"],
      "customChangelogUrl": "https://github.com/linuxserver/docker-kasm/releases"
    },
    {
      "matchPackageNames": ["cloudflare/cloudflared"],
      "customChangelogUrl": "https://github.com/cloudflare/cloudflared/blob/master/RELEASE_NOTES"
    },
    {
      "matchPackageNames": ["gotify/server-arm7	"],
      "customChangelogUrl": "https://github.com/gotify/server/releases"
    }
 ]
}